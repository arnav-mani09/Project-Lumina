{
  "compilerOptions": {
    /* === File Paths === */
    "rootDir": "./ts",
    "outDir": "./dist",

    /* === Target Environment === */
    "target": "ES6",
    "module": "ES6",
    "lib": ["DOM", "ES6"],

    /* === Type Checking === */
    "strict": true,

    /* === Output === */
    "sourceMap": true,
    "removeComments": true,

    /* === Misc === */
    "skipLibCheck": true
  },
  "include": ["ts/**/*"],
  "exclude": ["node_modules"]
}
